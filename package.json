{
  "name": "bedrock-utils",
  "version": "0.1.3",
  "description": "Utils to use on the frontend and node",
  "repository": {
    "type": "git",
    "url": "git@bitbucket.org:sendoushi/bedrock-utils.git"
  },
  "main": "./dist/index.js",
  "engines": {
    "node": ">=6"
  },
  "scripts": {
    "clean": "rm -rf dist/*",
    "test": "npm run eslint && npm run mocha",
    "mocha": "mocha ./test/test.js --compilers js:babel-core/register",
    "eslint": "eslint ./src/**/*.js",
    "prebuild": "npm run clean && npm run test",
    "build": "babel src --out-dir dist --source-maps inline --ignore *.spec.js"
  },
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-eslint": "^6.1.2",
    "babel-plugin-discard-module-references": "^1.1.2",
    "babel-preset-es2015": "^6.18.0",
    "chai": "^3.5.0",
    "es6-promise": "^4.0.5",
    "eslint": "^2.0.0",
    "eslint-config-defaults": "^9.0.0",
    "eslint-plugin-react": "^6.2.0",
    "glob": "^7.1.1",
    "mocha": "^3.2.0"
  },
  "dependencies": {
    "ajv": "^4.10.0",
    "lodash": "^4.17.2"
  }
}
